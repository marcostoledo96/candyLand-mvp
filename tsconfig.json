{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "allowJs": true
  },
  "include": [
    "src",
    "api",
    "backend",
    "vite.config.ts",
    "vite.config.js",
    "eslint.config.js",
    "*.d.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
